<div class="table-responsive-md mt-2" data-controller="table">
   <%= table_tag class: 'table' do %>
    <thead>
      <tr>
        <%= table_header_tag t('.office'), class: 'text-left w-20', sorter: 'text' %>
        <%= table_header_tag t('.number'), class: 'text-left w-20', sorter: 'text' %>
        <%= table_header_tag t('.effective_on'), class: 'text-left w-20', sorter: 'date' %>
        <%= table_header_tag t('.published_on'), class: 'text-left w-20', sorter: 'date' %>
        <%= table_header_tag t('.file_number'), class: 'text-left w-20', sorter: 'text' %>
        <%= table_header_tag t('.resolution'), class: 'text-left w-40', sorter: 'text' %>
        <%= table_header_tag t('.means_of_resolution'), class: 'text-left w-60', sorter: 'text' %>
        <%= table_header_tag '', class: 'text-left w-60', sorter: 'text' %>
      </tr>
    </thead>
    <tbody>
      <% decrees.each do |decree| %>
        <tr>
          <td><%= decree.office ? link_to(decree.office.name, office_path(decree.office)) : '&ndash;' %></td>
          <td><%= link_to trim(decree.number, length: 10), decree.url, target: '_blank' %></td>
          <td data-value="<%= decree.effective_on %>"><%= l decree.effective_on %></td>
          <td data-value="<%= decree.published_on %>"><%= l decree.published_on %></td>
          <td><%= decree.file_number %></td>
          <td><%= trim decree.resolution, length: 15 %></td>
          <td><%= trim decree.means_of_resolution, length: 10 %></td>
          <td class="text-center"><%= decrees_download_icon_link(decree.url, i18n: { file_info: decree.file_info }) %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</div>