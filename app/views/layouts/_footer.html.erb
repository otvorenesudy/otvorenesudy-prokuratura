<footer class="container small mt-5 px-sm-0 py-3">
  <div class="d-flex align-items-start align-items-xl-center text-uppercase border-bottom mb-3">
    <nav class="nav nav-primary flex-row flex-grow-1 mb-3">
      <div class="d-flex flex-column flex-xl-row flex-grow-1 flex-xl-grow-0 mr-4 mr-xl-0">
        <%= link_to t('.about'), about_static_page_path, class: 'nav-link ml-0 mr-auto mr-xl-3' %>
        <%= link_to t('.analyses'), 'https://transparency.sk/sk/tag/TODO', class: 'nav-link ml-0 ml-xl-3 mr-auto mr-xl-3' %>
        <%= link_to t('.faq'), faq_static_page_path, class: 'nav-link ml-0 ml-xl-3 mr-auto mr-xl-3' %>
        <%= link_to t('.feedback'), feedback_static_page_path, class: 'nav-link ml-0 ml-xl-3 mr-auto mr-xl-3' %>
      </div>
      <div class="d-flex flex-column flex-xl-row flex-grow-1 flex-xl-grow-0 mr-4">
        <%= link_to t('.tos'), tos_static_page_path, class: 'nav-link ml-0 ml-xl-3 mr-auto mr-xl-3' %>
        <%= link_to t('.privacy'), privacy_static_page_path, class: 'nav-link ml-0 ml-xl-3 mr-auto mr-xl-3' %>
        <%= link_to t('.api'), 'https://api.otvorenesudy.sk', class: 'nav-link ml-0 ml-xl-3 mr-auto mr-xl-3' %>
        <%= link_to t('.contact'), contact_static_page_path, class: 'nav-link ml-0 ml-xl-3 mr-0' %>
      </div>
    </nav>

    <nav class="nav nav-primary flex-column flex-md-row flex-nowrap align-items-center justify-content-center mb-3">
      <%= link_to t('.donate'), donation_url, class: 'btn btn-primary order-first order-md-last', role: :button %>
    </nav>
  </div>

  <div class="d-flex flex-wrap align-items-center justify-content-between border-bottom mb-3">
    <nav class="nav justify-content-start col mr-3 mb-3 p-0">
      <%= link_to brand_tag('transparency-international-slovensko', width: 158.33, height: 38, variant: I18n.locale), 'https://transparency.sk', class: 'tis' %>
    </nav>

    <div class="flex-grow-1 flex-grow-lg-0 text-center order-last order-lg-0 border-top border-top-lg-0 mb-3">
      <nav class="nav nav-secondary justify-content-center mt-3 mt-lg-0 mb-2 mb-md-0">
        <%= link_to 'Transparency International Slovensko', 'https://transparency.sk', class: 'nav-link font-weight-bold mb-2 mb-sm-0' %>
        <%= link_to "&copy; #{Date.current.year}".html_safe, copyright_static_page_path, class: 'nav-link' %>
        <%= link_to 'otvorenesudy', organisation_url, class: 'nav-link' %>
        <%= link_to OpenCourts::Prokuratura::VERSION::STRING, repository_url("releases/tag/v#{OpenCourts::Prokuratura::VERSION::STRING}"), class: 'nav-link' %>
      </nav>
      <%= t '.disclaimer.resources' %>
      <br class="d-inline d-md-none" />
      <%= t '.disclaimer.correctness' %>
    </div>

    <nav class="nav flex-nowrap justify-content-end col ml-3 mb-3 p-0">
      <%= link_to icon_tag('facebook', size: 24), 'https://facebook.com/transparencysk', class: 'nav-link m-0' %>
      <%= link_to icon_tag('twitter', size: 24), 'https://twitter.com/transparencysk', class: 'nav-link mx-1 m-0' %>
      <%= link_to icon_tag('youtube', size: 24), 'https://www.youtube.com/user/TISlovensko', class: 'nav-link m-0' %>
    </nav>
  </div>

  <nav class="nav flex-column flex-sm-row align-items-center justify-content-center text-uppercase">
    <%= link_to brand_tag('sme', width: 68.31, height: 24), 'https://sme.sk', class: 'nav-link sme mx-2' %>
    <%= link_to t('.sme.price_of_state'), 'http://cenastatu.sme.sk', class: 'nav-link sme mx-2' %>
    <%= link_to t('.sme.municipalities'), 'http://obce.sme.sk', class: 'nav-link sme mx-2' %>
    <%= link_to t('.sme.schools'), 'http://skoly.sme.sk', class: 'nav-link sme mx-2' %>
    <%= link_to t('.sme.procurements'), 'http://tender.sme.sk', class: 'nav-link sme mx-2' %>
    <%= link_to t('.sme.universities'), 'http://vysokeskoly.sme.sk', class: 'nav-link sme mx-2' %>
  </nav>
</footer>
