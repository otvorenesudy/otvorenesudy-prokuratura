<header class="container mt-3 px-sm-0">
  <nav class="nav flex-column flex-md-row align-items-between align-items-md-center">
    <div class="nav flex-grow-1 justify-content-between mr-md-4 mb-3">
      <%= link_to brand_tag('otvorena-prokuratura', { height: 60 , width: 225 }), root_path, class: 'navbar-brand mr-3 mr-md-4' %>

      <div class="nav nav-secondary justify-content-center align-items-center align-self-stretch font-weight-bold text-uppercase small border-right-md pr-md-4">
        <%= link_to span_tag(t('.slovak'), class: 'd-none d-lg-inline') + span_tag(t('.sk'), class: 'd-lg-none'), { l: :sk }, class: 'nav-link' %>
        <%= link_to span_tag(t('.english'), class: 'd-none d-lg-inline') + span_tag(t('.en'), class: 'd-lg-none'), { l: :en }, class: 'nav-link' %>
      </div>
    </div>

    <div class="nav flex-grow-1 flex-md-grow-0 flex-wrap justify-content-between align-items-center border-top border-top-md-0 mb-3">
      <%= link_to brand_tag('transparency-international-slovensko', width: 158.33, height: 38, variant: I18n.locale), 'https://transparency.sk', class: 'tis d-block mr-3 mr-md-4 mt-3 mt-md-0' %>
      <%= link_to t('.donate'), donation_url, class: 'btn btn-primary btn-lg mt-3 mt-md-0', role: :button, target: :_blank %>
    </div>
  </nav>

  <nav class="navbar nav-primary navbar-expand-xl font-weight-bold text-uppercase border-bottom">
    <div class="d-flex d-xl-none justify-content-between border-top w-100 py-2">
      <%= button_tag t('.menu'), class: 'navbar-toggler mx-0', data: { toggle: 'collapse', target: '#navbar' }, name: nil, type: 'button' %>
      <%= button_tag '&#9776;'.html_safe, class: 'navbar-toggler', data: { toggle: 'collapse', target: '#navbar' }, name: nil, type: 'button' %>
    </div>

    <div id="navbar" class="navbar-collapse collapse d-xl-block border-top">
      <div class="navbar-nav justify-content-between py-2">
        <%= bar_link_to t('.prosecutors'), prosecutors_path, class: 'mx-0' %>
        <%= bar_link_to t('.offices'), offices_path, class: 'mx-0' %>
        <%= dropdown_bar_link_to t('.criminality.title'), '/criminality', [{ title: t('.criminality.prosecutors'), path: statistics_path}, { title: t('.criminality.police'), path: crimes_path}], class: 'mx-0' %>   
        <%= bar_link_to t('.otvorenesudy'), 'https://otvorenesudy.sk', class: 'mx-0', target: :_blank %>
      </li>
      </li>
      </div>
    </div>
  </nav>
</header>
