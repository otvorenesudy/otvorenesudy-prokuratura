<ul class="facet-list" data-target="suggest.results">
  <% if values.any? %>
    <%= collapsible_facet_results(values, selected: @search.params[:paragraph]) do |value, _| %>
      <li class="facet-item">
        <%= link_to statistics_path(search_params(params, paragraph: value)), class: "facet-link#{' active' if search_param?(params, :paragraph, value)}" do %>
          <%= trim(Paragraph.name_of(value), length: 24) %>

          <div class="facet-tag">
            <%= tooltip_tag(I18n.t("statistics.index.search.paragraph.#{Paragraph.type_of(value)}.badge"),  I18n.t("statistics.index.search.paragraph.#{Paragraph.type_of(value)}.title"), class: 'd-inline') %>
          </div>
        <% end %>
      </li>
    <% end %>
  <% else %>
    <li class="facet-item">
      <span class="text-muted"><%= t 'statistics.index.search.paragraph.not_found' %></span>
    </li>
  <% end %>
</ul>
